{
  "name": "localspace",
  "description": "A library that unifies the APIs of IndexedDB, localStorage and other storage types into a consistent API",
  "version": "1.1.0",
  "type": "module",
  "author": "unadlib",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unadlib/localspace.git"
  },
  "source": "./src/index.ts",
  "main": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.umd.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.esm.js"
      }
    },
    "./react-native": {
      "require": {
        "types": "./dist/react-native.d.ts",
        "default": "./dist/react-native.cjs.js"
      },
      "default": {
        "types": "./dist/react-native.d.ts",
        "default": "./dist/react-native.esm.js"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "test": "vitest run && yarn build && playwright test",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:rn:integration:setup": "yarn --cwd integration/react-native-jest install --production=false",
    "test:rn:integration": "yarn test:rn:integration:setup && yarn build && yarn --cwd integration/react-native-jest test",
    "test:e2e": "yarn build && playwright test",
    "test:e2e:coverage": "rimraf .nyc_output && yarn build && PLAYWRIGHT_COVERAGE=1 playwright test && nyc report --reporter=text-summary --reporter=html",
    "coverage:full": "rimraf coverage .nyc_output && vitest run --coverage && node -e \"const fs=require('fs');const path=require('path');const src=path.join('coverage','coverage-final.json');if(!fs.existsSync(src)){console.error('Vitest coverage JSON not found:',src);process.exit(1);}fs.mkdirSync('.nyc_output',{recursive:true});fs.copyFileSync(src,path.join('.nyc_output','vitest.json'));\" && yarn build && PLAYWRIGHT_COVERAGE=1 playwright test && nyc report --reporter=text-summary --reporter=html",
    "clean": "rimraf dist",
    "check:type": "tsc --skipLibCheck --noEmit",
    "build": "yarn clean && tsc --skipLibCheck && yarn build:prod",
    "build:prod": "NODE_ENV=production rollup --config --bundleConfigAsCjs",
    "build:doc": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts",
    "commit": "yarn git-cz",
    "format": "prettier --write src"
  },
  "keywords": [
    "indexeddb",
    "localstorage",
    "storage"
  ],
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^24.6.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.0",
    "eslint": "^9.3.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "fake-indexeddb": "^6.2.4",
    "jsdom": "^27.0.0",
    "localforage": "^1.10.0",
    "nyc": "^17.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.3",
    "serve": "^14.2.5",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "^5.9.2",
    "v8-to-istanbul": "^9.3.0",
    "vitest": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "lz-string": "^1.5.0"
  }
}
