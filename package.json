{
  "name": "localspace",
  "description": "A library that unifies the APIs of IndexedDB, localStorage and other storage types into a consistent API",
  "version": "0.2.1",
  "type": "module",
  "author": "unadlib",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unadlib/localspace.git"
  },
  "source": "./src/index.ts",
  "main": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.umd.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.esm.js"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "test": "vitest run && yarn build && playwright test",
    "test:unit": "vitest run",
    "test:e2e": "yarn build && playwright test",
    "clean": "rimraf dist",
    "check:type": "tsc --skipLibCheck --noEmit",
    "build": "yarn clean && tsc --skipLibCheck && yarn build:prod",
    "build:prod": "NODE_ENV=production rollup --config --bundleConfigAsCjs",
    "build:doc": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts",
    "commit": "yarn git-cz"
  },
  "keywords": [
    "indexeddb",
    "localstorage",
    "storage"
  ],
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^24.6.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.0",
    "eslint": "^9.3.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "fake-indexeddb": "^6.2.4",
    "jsdom": "^27.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.3",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}